            <h3>Learn from people in your community.</h3>
          </div>
          <%= form_tag("/submit_email", :method => 'post') do %>
            <div class="field signup-area">
              <div class="grid__cell button-toggle-outer">
                <div class="button-toggle ss-icon">
                  <%= label_tag("Student", nil, :class => 'signup-select-btn') %>
                  <%= radio_button_tag :tutor, false, true, :id =>'tutor_false', :default=>"selected" %>
                </div>
              </div>

              <div class="grid__cell button-toggle-outer">
                <div class="button-toggle ss-icon">
