<div class="navigation-obj">
    <div class="wrapper">
      <div class="grid">

        <!-- logo -->
        <div class="grid__cell logo-cell">
          <%= link_to image_tag("logo_sm_horizontal@2X.png"), root_path %>
        </div>
        <!-- login -->
        <div class="grid__cell login-cell">
          <% if current_user %>
            <p><%= current_user.username%></p>
            <p><%= current_user.email%></p>

            <%= link_to 'Edit Details', edit_user_path(current_user) %>
            <%= link_to 'Logout', logout_path%>
          <% else %>
            <%= form_tag("/create_session", :method => "post", :class => "nav-login-form") do %>
                <ul>
                  <li><%= email_field_tag :email, nil, placeholder: "email@email.com" %></li>
                  <li><%= password_field_tag(:password, nil, placeholder: "password") %></li>
                  <li><%= submit_tag('Login!') %> </li>
                </ul>
            <% end %>
          <% end %>
      </div>
    </div>
  </div>


